<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.joao.santana.domain.entities.Planet" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/four_size"
        android:layout_marginBottom="@dimen/four_size"
        android:background="@color/colorLightGrey">

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/twelve_size"
            android:paddingStart="@dimen/twelve_size"
            android:paddingTop="@dimen/twenty_size"
            android:paddingBottom="@dimen/twenty_size"
            android:gravity="center"
            android:text="@{data.name}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sixteen_value"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>